@model QulixProject.UI.Models.PerformerModel

@{
    ViewBag.Title = "Add performer";
}

<h1>Add erformer</h1>

@using (Html.BeginForm("AddPerformer","Home",FormMethod.Post)) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Performer Model</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.FirstName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.FirstName)
            @Html.ValidationMessageFor(model => model.FirstName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.LastName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.LastName)
            @Html.ValidationMessageFor(model => model.LastName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.PatronymicName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.PatronymicName)
            @Html.ValidationMessageFor(model => model.PatronymicName)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
