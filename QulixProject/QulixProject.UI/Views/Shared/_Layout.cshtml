<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("styles", required: false)
</head>
<body>

    <div class="container">
        <div class="masthead">
            <nav>
                <ul class="menuMy">
                    <li class="homeMenu" style="margin:15px; padding: 15px; font-size: 25px; display: inline; margin-right: 250px; border: 1px solid gray; background: gainsboro; border-radius: 3%; text-decoration: none;">@Html.ActionLink("Home", "Index", "Home")</li>
                    <li class="taskMenu" style="margin:15px; padding: 15px; font-size: 25px; display: inline; margin-right: 250px; border: 1px solid gray; background: gainsboro; border-radius: 3%; text-decoration: none;">@Html.ActionLink("View tasks", "ViewTasks", "Home")</li>
                    <li class="performerMenu" style="margin:15px; padding: 15px; font-size: 25px; display: inline; margin-right: 250px; border: 1px solid gray; background: gainsboro; border-radius: 3%; text-decoration: none;">@Html.ActionLink("View performers", "ViewPerformers", "Home")</li>
                </ul>
            </nav>
        </div>
    </div>

    <div class="container">
        @RenderBody()
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

@section styles {
    <link rel="stylesheet" href="/Content/Site.css" />
}